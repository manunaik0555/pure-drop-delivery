generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Vercel's pooled connection
  directUrl = env("POSTGRES_URL_NON_POOLING") // Vercel's direct connection
}

model Inventory {
  id      Int    @id @default(autoincrement())
  brand   String
  product String
  stock   Int
  price   Int
}

model Order {
  id       String @id
  date     String
  customer String
  items    String
  total    Int
  status   String
}

model Setting {
  id         Int    @id @default(autoincrement())
  liveTicker String
}
model Gallery {
  id        Int      @id @default(autoincrement())
  url       String
  title     String
  createdAt DateTime @default(now())
}